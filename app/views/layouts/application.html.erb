<!DOCTYPE html>
<html>
<head>
  <title>Luigi's Masterpiece Foods</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <div class="container">

    <h1>Luigi's Masterpiece Foods</h1>

    <% content_for(:navbar) do %>
    <h3 class="navbar"><a href="/">Home</a> |
      <%= link_to "Products", products_path %>
    </h3>
    <% end %>
    <%= yield :navbar %>

    <hr>

    <%= flash[:alert] %>
    <%= flash[:notice] %>

    <%= yield %>
  </div>
</body>
</html>
